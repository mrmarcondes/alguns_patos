<div class="row">
  <div class="span12">
    <div class="widget stacked">
        <div class="widget-header">
          <i class="icon-list-alt"></i>
          <h3>Alguns patos e o fodão</h3>
        </div> <!-- /widget-header -->

        <div class="widget-content">
            <section id="accordions">
              <div class="panel-group accordion">
                <div class="panel panel-default open">
                  <div class="panel-heading">
                    <h4 class="panel-title">
                      <a class="accordion-toggle" data-toggle="collapse" data-parent=".accordion" href="#collapseOne">
                        Ranking
                      </a>
                    </h4>
                  </div>
                  <div id="collapseOne" class="panel-collapse collapse in">
                    <div class="panel-body">
                      <div class="tab-content">
                        <div class="table-responsive">
                          <table class="table table-bordered table-hover table-striped">
                            <thead>
                              <tr>
                                <th>Nome</th>
                                <th>Aproveitamento %</th>
                                <th>Vitórias</th>
                                <th>Derrotas</th>
                                <th>Total de partidas</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% @ranking.each do |position| %>
                                <tr>
                                  <td><%= position.player.name %></td>
                                  <td><%= position.percentage_of_wins %></td>
                                  <td><%= position.won_matches %></td>
                                  <td><%= position.lost_matches %></td>
                                  <td><%= position.total_matches %></td>
                                </tr>
                              <% end %>
                            </tbody>
                          </table>
                        </div> <!-- /.table-responsive -->
                    </div>
                  </div>
                </div>
                <div class="panel panel-default open">
                  <div class="panel-heading">
                    <h4 class="panel-title">
                      <a class="accordion-toggle" data-toggle="collapse" data-parent=".accordion" href="#collapseTwo">
                        Placares
                      </a>
                    </h4>
                  </div>
                  <div id="collapseTwo" class="panel-collapse collapse in">
                    <div class="panel-body">
                      <div class="tab-content">
                        <div class="table-responsive">
                          <table class="table table-bordered table-hover table-striped">
                            <thead>
                              <tr>
                                <th>Placar</th>
                                <th>Vencedor</th>
                                <th>Perdedor</th>
                                <th>Data da partida</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% @matches.each do |match| %>
                                <tr>
                                  <td><%= match.score %></td>
                                  <td><%= match.winner.name %></td>
                                  <td><%= match.loser.name %></td>
                                  <td><%= l(match.match_date) %></td>
                                </tr>
                              <% end %>
                            </tbody>
                          </table>
                        </div> <!-- /.table-responsive -->
                    </div>
                  </div>
                </div>
              </div>
            </section>
        </div> <!-- /widget-content -->

        </div>

  </div>
</div>

